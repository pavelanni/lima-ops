# MinIO configuration file
# Generated by Ansible

# MinIO root credentials
MINIO_ROOT_USER={{ minio.root_user }}
MINIO_ROOT_PASSWORD={{ minio.root_password }}

# Server endpoints for distributed setup
{% if all_endpoints | length > 1 %}
MINIO_VOLUMES="{{ all_endpoints | join(' ') }}"
{% else %}
# Single node setup
MINIO_VOLUMES="{% for disk in additional_disks | default([]) %}/mnt/{{ disk.name }}{% if not loop.last %} {% endif %}{% endfor %}"
{% endif %}

# Console configuration
MINIO_CONSOLE_ADDRESS=":{{ minio.console_port }}"
MINIO_SERVER_ADDRESS=":{{ minio.api_port }}"

# Additional settings
MINIO_BROWSER=on
MINIO_PROMETHEUS_AUTH_TYPE=public